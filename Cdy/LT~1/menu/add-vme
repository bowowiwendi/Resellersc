baris_panjang
}

function Sc_Credit(){
sleep 1
baris_panjang
echo -e "\e[0;36m      Terimakasih Telah Menggunakan \033[0m"
echo -e "\e[0;36m             Script Credit \033[0m"
echo -e "\e[0;36m               RiswanVpn  \033[0m"
baris_panjang
exit 1
}

# // jalankan perintah :  sleep 3 & loading $!
loading() {
  local pid=$1
  local delay=0.1
  local spin='-\|/'

  while ps -p $pid > /dev/null; do
    local temp=${spin#?}
    printf "[%c] " "$spin"
    local spin=$temp${spin%"$temp"}
    sleep $delay
    printf "\b\b\b\b\b\b"
  done

  printf "    \b\b\b\b"
}
function BANNER() {
clear
baris_panjang
echo -e       "${R2}              XRAY VMESS               \033[0m"
baris_panjang
}



